<!DOCTYPE html>
<html>
  <head>
    <title>BookersNew</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" integrity="sha384-HzLeBuhoNPvSl5KYnjx0BT+WB0QEEqLprO+NBkkk5gbc67FTaL7XIGa2w1L0Xbgc" crossorigin="anonymous">
  </head>
  
  <body>
    <header id="header" class="">
  <!-- /header -->
<nav class="nav-top clearfix">
    <div class="container-fluid">
        <h2><span class="glyphicon glyphicon-book" aria-hidden="true"></span>Bookers</h2>
        <div class="slidemenu">
        <ul class="nav navbar-nav navbar-right" >
         <% if user_signed_in? %>
        
            <li>
             <%= link_to 'Home', user_path(current_user), class: "glyphicon glyphicon-home" %>
            </li>
        
            <li class="user-matome">
             <%= link_to 'Users', users_path, class: "glyphicon glyphicon-user" %>
            </li>
        
            <li>
        
             <%= link_to 'Books', books_path, class: "glyphicon glyphicon-book" %>
            </li>
        
            <li>
             <%= link_to "logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
            </li>
        
         <% else %>
            <li>
             <%= link_to ' Home', "/", class: "glyphicon glyphicon-home" %>
            </li>
            <li class="top-about">
             <%= link_to ' About', "/home/about" ,class: "glyphicon glyphicon-link" %>
            </li>
            <li>
             <%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit" %>
            </li>
            <li>
             <%= link_to "login", new_user_session_path,class: "glyphicon glyphicon-log-in" %>
            </li>
         <% end %>
        </ul>
        </div>
    </div>
</nav>

</header>
    <p class="noitce"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
